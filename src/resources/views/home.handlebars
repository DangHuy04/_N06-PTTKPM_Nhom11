{{!-- iPhone --}}
<div class="container">
    <h1>{{iphone.title}}</h1>
    <div class="grid">
        {{#each iphone.products}}
        <a href="/product/{{this.productId}}" class="card-link"> 
            <div class="card">
                {{#if this.discount}}
                    <div class="badge discount">{{this.discount}}</div>
                {{/if}}
                {{#if this.installment}}
                    <div class="badge installment">{{this.installment}}</div>
                {{/if}}
                <img src="{{this.image}}" alt="{{this.name}}">
                <h2>{{this.name}}</h2>
                <p class="price">{{this.price}}</p>
                {{#if this.oldPrice}}
                    <p class="old-price">{{this.oldPrice}}</p>
                {{/if}}
            </div>
        </a>
        {{/each}}
    </div>
    <a href="/iphone" class="button">Xem tất cả iPhone</a>
</div>

