<div class="container mt-5">
  <div class="card p-4 text-center shadow-lg position-relative">
    <!-- Nút chuyển banner -->
    <div class="position-absolute top-50 start-0 translate-middle-y">
      <i class="bi bi-chevron-left text-secondary fs-1"></i>
    </div>
    <div class="position-absolute top-50 end-0 translate-middle-y">
      <i class="bi bi-chevron-right text-secondary fs-1"></i>
    </div>

    <!-- Nội dung banner -->
    <h1 class="display-4 fw-bold mb-3">
      <i class="bi bi-apple"></i> {{title}}
    </h1>
    <h2 class="text-danger fw-bold mb-3">{{subtitle}}</h2>
    <p class="fs-5">
      Trả góp 0% từ <span class="text-danger fw-bold">{{installment}}</span>
    </p>
    <p class="fs-5">
      Thu cũ đổi mới giảm đến <span class="fw-bold">{{tradeIn}}</span> | Lật lì xì giảm thêm tới <span class="fw-bold">{{discount}}</span>
    </p>

    <!-- Nút CTA -->
    <button class="btn btn-outline-dark rounded-pill px-4 py-2">{{buttonText}}</button>

    <!-- Ảnh sản phẩm -->
    <img src="{{imageUrl}}" alt="{{title}}" class="d-block mx-auto mt-4 img-fluid" />
  </div>
</div>

<!-- Nội dung bổ sung -->
<div class="container mt-4">
  <div class="card p-4 text-center shadow-lg">
    <img src="{{additionalImage}}" alt="{{additionalDescription}}" class="d-block mx-auto mb-3 img-fluid" />
    <p class="fs-5">{{additionalDescription}}</p>
  </div>
</div>
